<idea-plugin>
    <id>com.github.dogsunny.bpeflow</id>
    <name>BPE_Flow</name>
    <vendor>dogsunny</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.dogsunny.bpeflow.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.dogsunny.bpeflow.services.MyProjectService"/>
        <fileType name="Simple File"
                  implementationClass="com.github.dogsunny.bpeflow.language.FlowFileType"
                  fieldName="INSTANCE"
                  language="Flow"
                  extensions="flow"
        />
    </extensions>

    <applicationListeners>
        <listener class="com.github.dogsunny.bpeflow.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
